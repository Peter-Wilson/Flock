<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="brockbadgers.flock.Dialog.NameDialog">
    <TextView
        android:layout_width="250dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Enter Name and Colour:" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/background_name"
        android:background="@drawable/rounded_green"
        android:orientation="horizontal"
        android:padding="20dp">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/username"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_green"
            android:id="@+id/google_green"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_cyan"
            android:id="@+id/google_cyan"
            android:layout_height="30dp" />
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_azure"
            android:id="@+id/google_azure"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_blue"
            android:id="@+id/google_blue"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_violet"
            android:id="@+id/google_violet"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_width="45dp"
            android:background="@color/google_yellow"
            android:id="@+id/google_yellow"
            android:layout_height="30dp"/>
    </LinearLayout>
    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:id="@+id/submit_name" />
</LinearLayout>
